@model List<Bloggie.Web.Models.Domain.Tag>
@{
}

<div class="bg-secondary py-2">
    <div class="container">
        <h1>Show all Tags - Admin Functionallity</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover table-striped ">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Display Name</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DisplayName</td>
                            <td class="d-flex justify-content-between">
                                <a asp-action="Edit" class="btn btn-primary w-100 mx-2" asp-controller="AdminTags" asp-route-id="@item.Id">Edit</a>
                                <form method="post">
                                    <button asp-controller="AdminTags" asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-danger w-100">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
    