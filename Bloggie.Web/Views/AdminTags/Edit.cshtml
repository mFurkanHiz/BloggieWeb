
@model Bloggie.Web.Models.ViewModels.EditTagRequest
@*  *@
@{
}

<div class="bg-secondary py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionallity</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly/>
            @* asp-for="Id" olmasa da olur *@
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark my-2">Update</button>
            <button type="submit" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-dark ms-2">Delete</button>
        </div>
    </form>
</div>